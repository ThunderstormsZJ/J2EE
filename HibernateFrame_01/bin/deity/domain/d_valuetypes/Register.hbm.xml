<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="deity.domain.d_valuetypes">
	<class name="Register">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="name" length="30"/>
		<property name="birthday" type="timestamp"/>
		<property name="explain" column="exp" type="text" length="500"/>
		<property name="image" column="pho" type="binary" length="512000"/>
	</class>
</hibernate-mapping>

